<Window
    x:Class="QuanLyMayMoc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuanLyMayMoc"
    Title="Quản Lý Máy Móc">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for MenuBar -->
            <RowDefinition Height="*"/>
            <!-- Row for Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Footer -->
        </Grid.RowDefinitions>

        <!-- MenuBar -->
        <MenuBar HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="White" Margin="0">
            <MenuBarItem Title="Tệp tin" Margin="0,0,10,0">
                <MenuFlyoutItem Text="Tạo dự án mới"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Mở dự án"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Lưu"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Lưu với tên khác"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Exit"/>
            </MenuBarItem>

            <MenuBarItem Title="Chia sẻ dự án" Margin="0,0,10,0"/>

            <MenuBarItem Title="Hướng dẫn" Margin="0,0,10,0">
                <MenuFlyoutItem Text="Demo"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Hướng dẫn sử dụng"/>
            </MenuBarItem>

            <MenuBarItem Title="Hỗ trợ" Margin="0,0,10,0">
                <MenuFlyoutItem Text="Về chúng tôi"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Phản hồi"/>
            </MenuBarItem>
        </MenuBar>

        <!-- Đường phân tách giữa MenuBar và Main Content -->
        <Border Height="2" Background="Gray" Margin="0,0,0,5" Grid.Row="0" />

        <!-- Nội dung chính của ứng dụng -->
        <Grid Grid.Row="1" Background="White" Margin="10">
            <!-- Thêm nội dung chính của ứng dụng ở đây -->
            <TextBlock Text="Nội dung chính của ứng dụng" 
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
        </Grid>

        <!-- Footer -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Grid.Row="2">
            <Button Content="Dịch vụ theo tháng" Margin="5" Padding="10" Background="DodgerBlue" Foreground="White"/>
            <Button Content="Quản lý máy móc" Margin="5" Padding="10" Background="DodgerBlue" Foreground="White"/>
            <Button Content="Danh sách nhân viên" Margin="5" Padding="10" Background="DodgerBlue" Foreground="White"/>
            <Button Content="Tổng hợp máy theo kỳ" Margin="5" Padding="10" Background="DodgerBlue" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

