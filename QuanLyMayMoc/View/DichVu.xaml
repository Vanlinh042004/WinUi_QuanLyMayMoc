                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="600" />
                                    <ColumnDefinition Width="350" />
                                </Grid.ColumnDefinitions>

                                -->
                <!-- Các Border cho dữ liệu -->
                <!--
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="{x:Bind MaSanPham}" HorizontalAlignment="Center" Foreground="Black" Margin="5" />
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Grid.Column="1" Margin="0,0,5,0">
                                    <TextBlock Text="{x:Bind TenSanPham}" HorizontalAlignment="Center" Foreground="Black" Margin="5" />
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Grid.Column="2" Margin="0,0,5,0">
                                    <TextBlock Text="{x:Bind GiaBan}" HorizontalAlignment="Center" Foreground="Black" Margin="5" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->

                <!-- Nội dung Row 3 -->
                <!--<Grid Padding="10" RowSpacing="5" ColumnSpacing="5" Background="White" x:Name="DataEntryGrid">
                    <Grid x:Name="InputGrid" ColumnSpacing="5" RowSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="600"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>-->
            </StackPanel>
        </ScrollViewer>

    </Grid>

</Page>
