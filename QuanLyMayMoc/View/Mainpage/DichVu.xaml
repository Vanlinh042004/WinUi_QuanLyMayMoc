                                                        <!-- Tổng phí dịch vụ Tháng -->
                                                        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="{x:Bind EmployeeGroups.Count}" 
        BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Margin="0,5,0,5" Background="LightYellow">
